@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div id="adds" class="carousel slide" data-ride="carousel">
        <!-- Indicateurs -->
        <ol class="carousel-indicators">
            <li data-target="#adds" data-slide-to="0" class="active"></li>
            <li data-target="#adds" data-slide-to="1"></li>
            <li data-target="#adds" data-slide-to="2"></li>
            <li data-target="#adds" data-slide-to="3"></li>
        </ol>
        <!-- contenant pour les diapositives -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img style="width:100%; height: 400px" src="~/Media/Images/car_1.jpg" alt="MVC1">
            </div>
            <div class="item">
                <img style="width:100%; height: 400px" src="~/Media/Images/car_2.jpg" alt="MVC2">
            </div>
            <div class="item">
                <img style="width:100%; height: 400px" src="~/Media/Images/car_3.jpg" alt="MVC3">
            </div>
            <div class="item">
                <img style="width:100%; height: 400px" src="~/Media/Images/car_4.jpg" alt="MVC3">
            </div>
        </div>
        <!-- Les contrôle droite/gauche -->
        <a class="left carousel-control" href="#adds" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#adds" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="jumbotron" id="mainContent">
    <h1>@GrosBrasInc.Ressource.Ressource.Home_Index_GrosBrasInc</h1>
    <div class="row">
        <div class="col-lg-8">
            <h2>@GrosBrasInc.Ressource.Ressource.Home_Recommandations</h2>
            @Html.Action("_ListeRecommendation", "Home")
        </div>
        <div class="col-lg-4">
            <div class="row" style="height: 150px"><div class="col-lg-12">
                <p>@GrosBrasInc.Ressource.Ressource.Home_check_articles</p>
                <p><a href="../Articles/Index" class="btn btn-primary btn-lg">@GrosBrasInc.Ressource.Ressource.Views_Layout_Articles</a></p>
            </div></div>

            <div class="row" style="height: 150px"><div class="col-lg-12">
                <p>@GrosBrasInc.Ressource.Ressource.Home_check_forum</p>
                <p><a href="../Sujets/Index" class="btn btn-primary btn-lg">@GrosBrasInc.Ressource.Ressource.Views_Layout_Forum</a></p>
            </div></div>

            <div class="row" style="height: 150px"><div class="col-lg-12">
                <p>@GrosBrasInc.Ressource.Ressource.Home_visit_us</p>
                <p><a href="../Home/About" class="btn btn-primary btn-lg">@GrosBrasInc.Ressource.Ressource.Views_Layout_About</a></p>
            </div></div>
        </div>
    </div>
    <div class="row">
        <h2>@GrosBrasInc.Ressource.Ressource.Home_Index_Support</h2>
        <div class="col-md-1">
            <a target="_blank" href="https://www.youtube.com/"><img src="~/Media/Images/YouTube.png" height="40" width="40" alt="logo" style="border-radius: 10px; margin-top: 10px" /></a>
        </div>
        <div class="col-md-1">
            <a target="_blank" href="https://www.facebook.com/"><img src="~/Media/Images/facebook.png" height="40" width="40" alt="logo" style="border-radius: 10px; margin-top: 10px" /></a>
        </div>
        <div class="col-md-1">
            <a target="_blank" href="https://twitter.com/"><img src="~/Media/Images/twitter.png" height="40" width="40" alt="logo" style="border-radius: 10px; margin-top: 10px" /></a>
            @*<p><a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301867">Learn more &raquo;</a></p>*@
        </div>
    </div>
</div>

